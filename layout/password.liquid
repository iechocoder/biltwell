<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_accent }}">
  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon != blank %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %}

  <title>{{ shop.name }}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% include 'social-meta-tags' %}

  {{ 'site.css' | asset_url | stylesheet_tag }}
  {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
  {{ 'theme.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}
</head>

<body class="template-password">

  <main role="main" id="MainContent">
    <header role="banner">
      <h1>
        {% include 'svg-logo-header' %}
      </h1>
    </header>

    <h2>We're opening soon.</h2>

    {{ content_for_layout }}

    <div class="form_password clearfix">
    {% form 'storefront_password' %}
      <h4>Preview using password</h4>
      <label for="password">{{ 'general.password_page.login_form_password_label' | t }}</label>
      <input type="password" class="form-control"
        name="password"
        id="Password"
        placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
      <button type="submit" name="commit" class="btn btn-primary">
        {{ 'general.password_page.login_form_submit' | t }}
      </button>
    {% endform %}
    </div>
  </main>

</body>
</html>

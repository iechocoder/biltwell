<div class="term-section addresspage">
	<div class="container">
    	<div class="row">
        	<div class="col-lg-10 offset-lg-1"> 
                  {% paginate customer.addresses by 5 %}

                    <header role="banner">
                      <h2>{{ 'customer.account.title' | t }}</h2>
                      <button type="button" class="btn btn-address address-new-toggle">{{ 'customer.addresses.add_new' | t }}</button>
                    </header>

                    <p class="returntolist">
                      <a href="/account">{{ 'customer.account.return' | t }}</a>
                    </p>

                    <div id="AddressNewForm" class="hide">
                      {% form 'customer_address', customer.new_address %}
                      <h3 class="addnew">{{ 'customer.addresses.add_new' | t }}</h3>
					<div class="wrap-in">	
                      <label for="AddressFirstNameNew">
                        {{ 'customer.addresses.first_name' | t }}
                      </label>
                      <input type="text"
                             name="address[first_name]"
                             id="AddressFirstNameNew"
                             class="form-control"
                             value="{{ form.first_name }}"
                             autocapitalize="words">
                      </div>
                      <div class="wrap-in">
                      <label for="AddressLastNameNew">
                        {{ 'customer.addresses.last_name' | t }}
                      </label>
                      <input type="text"
                             name="address[last_name]"
                             id="AddressLastNameNew"
                             class="form-control"
                             value="{{ form.last_name }}"
                             autocapitalize="words">
						</div>
                      <div class="wrap-in">	
                      <label for="AddressCompanyNew">
                        {{ 'customer.addresses.company' | t }}
                      </label>
                      <input type="text"
                             name="address[company]"
                             id="AddressCompanyNew"
                             class="form-control"
                             value="{{ form.company }}"
                             autocapitalize="words">
						</div>
                      <div class="wrap-in">
                      <label for="AddressAddress1New">
                        {{ 'customer.addresses.address1' | t }}
                      </label>
                      <input type="text"
                             name="address[address1]"
                             id="AddressAddress1New"
                             class="form-control"
                             value="{{ form.address1 }}"
                             autocapitalize="words">
					</div>
                      <div class="wrap-in">
                      <label for="AddressAddress2New">
                        {{ 'customer.addresses.address2' | t }}
                      </label>
                      <input type="text"
                             name="address[address2]"
                             id="AddressAddress2New"
                             class="form-control"
                             value="{{ form.address2 }}"
                             autocapitalize="words">
					</div>
                      <div class="wrap-in">
                      <label for="AddressCityNew">
                        {{ 'customer.addresses.city' | t }}
                      </label>
                      <input type="text"
                             name="address[city]"
                             id="AddressCityNew"
                             class="form-control"
                             value="{{ form.city }}"
                             autocapitalize="words">
					</div>
                      <div class="wrap-in">
                      <label for="AddressCountryNew">
                        {{ 'customer.addresses.country' | t }}
                      </label>
                      <select
                        name="address[country]"
                        id="AddressCountryNew"
                        class="form-control"      
                        data-default="{{ form.country }}">
                        {{ country_option_tags }}
                      </select>
					</div>
                      <div class="wrap-in">
                     
                        <label for="AddressProvinceNew">
                          {{ 'customer.addresses.province' | t }}
                        </label>
                        <select
                          name="address[province]"
                          id="AddressProvinceNew"
                          class="form-control"      
                          data-default="{{ form.province }}">
                        </select>
              </div>
                      <div class="wrap-in">
						
                      <label for="AddressZipNew">
                        {{ 'customer.addresses.zip' | t }}
                      </label>
                      <input type="text"
                             name="address[zip]"
                             id="AddressZipNew"
                             class="form-control"
                             value="{{ form.zip }}"
                             autocapitalize="characters">
</div>
                      <div class="wrap-in">
                      <label for="AddressPhoneNew">
                        {{ 'customer.addresses.phone' | t }}
                      </label>
                      <input type="tel"
                             name="address[phone]"
                             id="AddressPhoneNew"
                             class="form-control"
                             value="{{ form.phone }}"
                             pattern="[0-9\-]*">
</div>
                      <div class="wrap-in">
                      {{ form.set_as_default_checkbox }}
                      <label for="address_default_address_new">
                        {{ 'customer.addresses.set_default' | t }}
                      </label>
						</div>
                      <div class="wrap-in">
                      <input type="submit" class="editdelbtn button" value="{{ 'customer.addresses.add' | t }}">
                      </div>   
                      <button type="editdelbtn button" class="address-new-toggle">
                        {{ 'customer.addresses.cancel' | t }}
                      </button>

                      {% endform %}

                    </div>

                    <h2 style="margin-top:50px;">{{ 'customer.addresses.title' | t }}</h2>
		
          <div class="edit-address-outer">
                    {% for address in customer.addresses %}

                      {% if address == customer.default_address %}
                        <p class="default"><strong>{{ 'customer.addresses.default' | t }}</strong></p>
                      {% endif %}
          	<div class="editaddresses{% if address == customer.default_address %} defaultaddress {% endif %}">
            
                      {{ address | format_address }}

            	<div class="editbuttons">
                      <button type="button" class="editdelbtn address-edit-toggle_{{ address.id }}" data-form-id="{{ address.id }}">
                        {{ 'customer.addresses.edit' | t }}
                      </button>
                      <button type="button" class="editdelbtn delbtn address-delete" data-form-id="{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                        {{ 'customer.addresses.delete' | t }}
                      </button>
          			</div>   

                      <div id="EditAddress_{{ address.id }}" class="hide">
                        {% form 'customer_address', address %}

                        <h4 style="padding-top:25px;">{{ 'customer.addresses.edit_address' | t }}</h4>
                        
						<div class="wrap-in">
                        <label for="AddressFirstName_{{ form.id }}">
                          {{ 'customer.addresses.first_name' | t }}
                        </label>
                        <input type="text"
                               name="address[first_name]"
                               id="AddressFirstName_{{ form.id }}"
                                class="form-control"
                               value="{{ form.first_name }}"
                               autocapitalize="words">
                        </div>
                        <div class="wrap-in">
                        <label for="AddressLastName_{{ form.id }}">
                          {{ 'customer.addresses.last_name' | t }}
                        </label>
                        <input type="text"
                               name="address[last_name]"
                               id="AddressLastName_{{ form.id }}"
                                class="form-control"
                               value="{{ form.last_name }}"
                               autocapitalize="words">
</div>
                        <div class="wrap-in">
                        <label for="AddressCompany_{{ form.id }}">
                          {{ 'customer.addresses.company' | t }}
                        </label>
                        <input type="text"
                               name="address[company]"
                               id="AddressCompany_{{ form.id }}"
                                class="form-control"
                               value="{{ form.company }}"
                               autocapitalize="words">
</div>
                        <div class="wrap-in">
                        <label for="AddressAddress1_{{ form.id }}">
                          {{ 'customer.addresses.address1' | t }}
                        </label>
                        <input type="text"
                               name="address[address1]"
                               id="AddressAddress1_{{ form.id }}"
                                class="form-control"
                               value="{{ form.address1 }}"
                               autocapitalize="words">
</div>
                        <div class="wrap-in">
                        <label for="AddressAddress2_{{ form.id }}">
                          {{ 'customer.addresses.address2' | t }}
                        </label>
                        <input type="text"
                               name="address[address2]"
                               id="AddressAddress2_{{ form.id }}"
                                class="form-control"
                               value="{{ form.address2 }}"
                               autocapitalize="words">
</div>
                        <div class="wrap-in">
                        <label for="AddressCity_{{ form.id }}">
                          {{ 'customer.addresses.city' | t }}
                        </label>
                        <input type="text"
                               name="address[city]"
                               id="AddressCity_{{ form.id }}"
                                class="form-control"
                               value="{{ form.city }}"
                               autocapitalize="words">
</div>
                        <div class="wrap-in">
                        <label for="AddressCountry_{{ form.id }}">
                          {{ 'customer.addresses.country' | t }}
                        </label>
                        <select
                          name="address[country]"
                          id="AddressCountry_{{ form.id }}"
                                 class="form-control"
                          class="address-country-option"
                          data-form-id="{{ form.id }}"
                          data-default="{{ form.country }}">
                          {{ country_option_tags }}
                        </select>
</div>
                        <div class="wrap-in">
                        <div id="AddressProvinceContainer_{{ form.id }}" style="display: none">
                          <label for="AddressProvince_{{ form.id }}">
                            {{ 'customer.addresses.province' | t }}
                          </label>
                          <select
                            name="address[province]"
                            id="AddressProvince_{{ form.id }}"
                                   class="form-control"
                            data-default="{{ form.province }}">
                          </select>
                        </div>
</div>
                        <div class="wrap-in">
                        <label for="AddressZip_{{ form.id }}">
                          {{ 'customer.addresses.zip' | t }}
                        </label>
                        <input type="text"
                               name="address[zip]"
                                class="form-control"
                               id="AddressZip_{{ form.id }}"
                               value="{{ form.zip }}"
                               autocapitalize="characters">
</div>
                        <div class="wrap-in">
                        <label for="AddressPhone_{{ form.id }}">
                          {{ 'customer.addresses.phone' | t }}
                        </label>
                        <input type="tel"
                               name="address[phone]"
                               id="AddressPhone_{{ form.id }}"
                                class="form-control"
                               value="{{ form.phone }}"
                               pattern="[0-9\-]*">
</div>
                        
                        {{ form.set_as_default_checkbox }}
                        <label for="address_default_address_{{ form.id }}">
                          {{ 'customer.addresses.set_default' | t }}
                        </label>

                        <input type="submit" class="btn--secondary button" value="{{ 'customer.addresses.update' | t }}">
                        <button type="button" class="editdelbtn address-edit-toggle" data-form-id="{{ form.id }}">
                          {{ 'customer.addresses.cancel' | t }}
                        </button>

                        {% endform %}

                      </div>
          		</div>  
                    {% endfor %}
              </div>
                    {% if paginate.pages > 1 %}
                      {% include 'pagination' %}
                    {% endif %}

                  {% endpaginate %}
              </div> 
          </div>  
  	</div>  
</div> 
{{ 'jquery-2.2.0.min.js' | asset_url | script_tag }}
<script type="text/javascript">
$( document ).ready(function(){
	$('.address-new-toggle').on('click', function(e) {
    	$( '#AddressNewForm' ).toggleClass( "showit" );
    });
{% for address in customer.addresses %}  	
  	$('.address-edit-toggle_{{ address.id }}').on('click', function(e) {
    	$( '#EditAddress_{{ address.id }}' ).toggleClass( "showit" );
    });
{% endfor %}  
}); 
</script>
{% assign color_swatches = '' %}
{% for swatch in section.blocks %}
  {% assign color_url = swatch.settings.image | img_url %}
  {% assign color_name = swatch.settings.name %}
  {% assign color_name = color_name | replace: ' ','-' | downcase %}
  {% assign color_name = color_name | replace: '/','-' %}
  {% assign color_name = color_name | replace: "'",'-' %}
  <script>
    window.ColorSwatches['{{color_name}}'] = '{{color_url}}';
  </script>
{% endfor %}


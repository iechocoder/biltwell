{% if section.settings.enable_sellers %}
    <section class="bestseller">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12 wow fadeInUp" data-wow-duration="2s">
                    {% if section.settings.title != blank %}
                        <h2 class="bestsection-title">{{ section.settings.title }}</h2>
                    {% endif %}
                    {% if section.settings.subtitle != blank %}
                        {{ section.settings.subtitle }}
                    {% endif %}
                <div class="slider-wrap">
                    <div class="bestseller-flexslider">
                        <ul class="slides">
                            {%- assign collection = collections[section.settings.collection] -%}
                                {% case section.settings.productrows %}
                                    {% when 1 %}
                                        {%- assign product_in_a_row = 5 -%}
                                    {% when 2 %}
                                        {%- assign product_in_a_row = 10 -%}
                                    {% when 3 %}
                                        {%- assign product_in_a_row = 15 -%}
                                {% endcase %}
                                {% for product in collection.products limit: product_in_a_row %}
                                    {% include 'best-sellers-collection-items' %}
                                {% endfor %}
                        </ul>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </section>
{%endif%}

{% schema %}
{
  "name": {
    "en": "Best Sellers"
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sellers",
      "label": {
        "en": "Enable Best Sellers"
      }
    },
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "Best Sellers"
      }
    },
  {
      "type": "richtext",
      "id": "subtitle",
      "label": {
        "en": "Sub Title"
      },
      "default": {
    "en": "<p>Check out this assortment of our best gear.</p>"
      }
    },
    {
      "id": "collection",
      "type": "collection",
      "label": {
        "en": "Best Sellers"
      }
    },
  {
      "type": "range",
      "id": "productrows",
      "label": {
        "en": "Number of rows"
      },
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Best Sellers"
      },
      "category": {
        "en": "Collection"
      }
    }
  ]
}
{% endschema %}

{% if section.settings.fullwidth_video_enabled %}
  {% unless product.metafields.videos.install-video == blank %}
    <section class="full-width-video" id="videosection" style="text-align:center;
        {% if section.settings.image_or_color == 'color' %}  background:{{ section.settings.bgcolor }}; {% endif%}
            {% if section.settings.image_or_color == 'image' %}  background-image:url(http:{{section.settings.bgimage | img_url: 'master'}}); {% endif%}">
                <div class="f-img-col wow fadeInUp" data-wow-duration="2s">
                  <div class="video-cont">
                    <div class='embed-container'><iframe width="100%" height="650" data-video="{{product.metafields.videos.install-video}}" frameborder="0" allow="accelerometer; autoplay; " allowfullscreen></iframe></div>
                  </div>
                </div>
    </section>
  {% endunless %}
{% endif %}
{% schema %}
  {
    "name": "Full Width Video",
    "settings": [
     {
        "type": "checkbox",
        "id": "fullwidth_video_enabled",
        "label": "Full Width Image",
        "default": false
      },
      {
        "type": "select",
        "id": "image_or_color",
        "label": "Background",
        "default": "color",
        "options": [
          {
            "value": "color",
            "label": "Color"
          },
          {
            "value": "image",
            "label": "Image"
          }
        ]
      },
      {
        "type": "color",
        "id": "bgcolor",
        "label": "Background Color",
        "default": "#2b2b2b"
       },
       {
        "type": "image_picker",
        "id": "bgimage",
        "label": "Background Image"
      }

    ]
  }
{% endschema %}


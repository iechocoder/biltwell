<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-3">
                    <div class="footer-logo">
                        <img src="{{'footer_logo.svg' | asset_url }}" class="footer_logo" />
                    </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xl-4">
                {%if section.settings.enablesearch%}
                    <div class="footer-form">
                        <form class="search" action="/search">
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Search" name="q" value="{{ search.terms | escape }}">
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </form>
                    </div>
                {%endif%}
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xl-5">
                {%if section.settings.socialicons%}
                    <ul class="footer-socialicons">
                        {% if settings.social_facebook_link != blank %}
                            <li>
                                <a href=" {{ settings.social_facebook_link }} " target="_blank">
                                    {% include 'svg-fb-icon' %}
                                </a>
                            </li>
                        {%endif%}

                        {% if settings.social_twitter_link != blank %}
                            <li>
                                <a href=" {{ settings.social_twitter_link }} " target="_blank">
                                    {% include 'svg-tw-icon' %}
                                </a>
                            </li>
                        {%endif%}

                        {% if settings.social_instagram_link != blank %}
                            <li>
                                <a href=" {{ settings.social_instagram_link }} " target="_blank">
                                    {% include 'svg-ig-icon' %}
                                </a>
                            </li>
                        {%endif%}

                        {% if settings.social_pinterest_link != blank %}
                            <li>
                                <a href=" {{ settings.social_pinterest_link }} " target="_blank">
                                    {% include 'svg-pi-icon' %}
                                </a>
                            </li>
                        {%endif%}

                        {% if settings.social_youtube_link != blank %}
                            <li>
                                <a href=" {{ settings.social_youtube_link }} " target="_blank">
                                    {% include 'svg-yt-icon' %}
                                </a>
                          </li>
                        {%endif%}

                        {% if settings.social_tumblr_link != blank %}
                            <li>
                                <a href=" {{ settings.social_tumblr_link }} " target="_blank">
                                    {% include 'svg-tm-icon' %}
                                </a>
                            </li>
                        {%endif%}

                        {% if settings.social_yelp_link != blank %}
                            <li>
                                <a href=" {{ settings.social_yelp_link }} " target="_blank">
                                    {% include 'svg-yp-icon' %}
                                </a>
                            </li>
                        {%endif%}
                    </ul>
                {%endif%}
            </div>
        </div>

        <div class="row no-gutters footer-detail-row">
            <div class="col-sm-12 col-md-9">
                <div class="row">
                    <div class="col-sm-12 col-md-4">
                        {% if section.settings.footer_menu_one_headline != blank%}
                            <h6 class="footer-list-title">{{section.settings.footer_menu_one_headline}}</h6>
                        {%endif%}
                        {% if linklists[section.settings.footer_menu_one].links.size > 0 %}
                            <ul class="footer-links">
                                {% for link in linklists[section.settings.footer_menu_one].links %}
                                    {% if forloop.index > 5 %}
                                        {% break %}
                                    {% endif %}
                                    <li><a href= "{{ link.url }}">{{ link.title }}</a></li>
                                {% endfor %}
                            </ul>
                        {%endif%}
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="footer-center-div">
                            {% if section.settings.footer_menu_two_headline != blank%}
                                <h6 class="footer-list-title">{{section.settings.footer_menu_two_headline}}</h6>
                            {%endif%}
                            {% if linklists[section.settings.footer_menu_two].links.size > 0 %}
                                <ul class="footer-links">
                                    {% for link in linklists[section.settings.footer_menu_two].links %}
                                        {% if forloop.index > 5 %}
                                            {% break %}
                                        {% endif %}
                                        <li><a href= "{{ link.url }}" target="_BLANK">{{ link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            {%endif%}
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="footer-center-div">
                            {% if section.settings.footer_menu_three_headline != blank%}
                                <h6 class="footer-list-title">{{section.settings.footer_menu_three_headline}}</h6>
                            {%endif%}
                            {% if linklists[section.settings.footer_menu_three].links.size > 0 %}
                                <ul class="footer-links">
                                    {% for link in linklists[section.settings.footer_menu_three].links %}
                                        {% if forloop.index > 5 %}
                                            {% break %}
                                        {% endif %}
                                        <li><a href= "{{ link.url }}">{{ link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            {%endif%}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-3">
                <div class="footer-box">
                    {% if section.settings.footer_menu_four_headline != blank%}
                        <h6 class="footer-list-title">{{section.settings.footer_menu_four_headline}}</h6>
                    {%endif%}
                    {% if linklists[section.settings.footer_menu_four].links.size > 0 %}
                        <ul class="footer-links">
                            {% for link in linklists[section.settings.footer_menu_four].links %}
                                {% if forloop.index > 5 %}
                                    {% break %}
                                {% endif %}
                                    <li><a href= "{{ link.url }}" {% if link.url contains 'youtube.com' %}target="_BLANK"{% endif %}>{{ link.title }}</a></li>
                            {% endfor %}
                        </ul>
                    {%endif%}
                </div>
            </div>
        </div>
        <div class="row footer-btm-row">
            <div class="col-sm-6">
                {% if linklists[section.settings.footer_bottom_linklist].links.size > 0 %}
                    <ul>
                        {% for link in linklists[section.settings.footer_bottom_linklist].links %}
                            {% if forloop.index > 2 %}
                                {% break %}
                            {% endif %}
                                <li><a href= "{{ link.url }}">{{ link.title }}</a></li>
                            {% endfor %}
                    </ul>
                {%endif%}
            </div>
            <div class="col-sm-6">
                <p>&copy; Copyright {% if section.settings.store_name != blank %}<strong>{{ section.settings.store_name }}</strong>{% else %}{{ shop.name | link_to: '/' }}{% endif %} {{ 'now' | date: "%Y" }}</p>
            </div>
        </div>
    </div>
</div>

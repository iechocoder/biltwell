{% if section.settings.section_enabled %}
<section class="get-new-stuff">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 wow slideInLeft" data-wow-duration="2s" data-wow-offset="100">
                <div class="get-stuff-box">
                    {% if section.settings.title %}<h5>{{section.settings.title }}</h5>{% endif %}
                    {% if section.settings.text %}{{section.settings.text }}{% endif %}
                </div>
            </div>
            <div class="col-sm-12 col-md-6 wow slideInRight" data-wow-duration="2s" data-wow-offset="100">
                <div class="get-stuff-form">
                    <form action="https://biltwellinc.us20.list-manage.com/subscribe/post?u=72fae0a72a10d7962979f07f2&amp;id=a275e87092" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                      <div id="mc_embed_signup_scroll">
                        <input type="email" value="" name="EMAIL" placeholder="{{ section.settings.email_placeholder }}" class="required email form-control" id="mce-EMAIL" required>
                        <button id="mc-embedded-subscribe" type="submit" class="btn btn-primary">{% if section.settings.button_text != blank %}{{ section.settings.button_text }}{% else %}Sign Up{% endif %}</button>
                      </div>
                      <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                      </div>
                      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                      <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_72fae0a72a10d7962979f07f2_16e011cc19" tabindex="-1" value=""></div>
                    </form>
                    <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script><script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';fnames[3]='ADDRESS';ftypes[3]='address';fnames[4]='PHONE';ftypes[4]='phone';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}



{% schema %}
  {
    "name": "Newsletter",
    "settings": [
      {
        "type":"checkbox",
        "id":"section_enabled",
        "label":"Show Form",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Get all the new stuff"
      },
      {
        "type": "text",
        "id": "email_placeholder",
        "label": "Email Placeholder",
        "default": "Your Email"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Sign Up"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Sign up for our bi-monthly newsletter to get notified of our sales, new product releases, and great deals!</p>"
      },
      {
        "type": "paragraph",
        "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [
      {
        "name": "Newsletter",
        "category": "Promotional"
      }
    ]
  }
{% endschema %}
